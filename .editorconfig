charset = utf-8

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[.sh]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4

[*.{json,yml}]
indent_style = space
indent_size = 2
